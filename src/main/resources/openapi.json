{
  "openapi": "3.0.1",
  "info": {
    "title": "Manik Jain NTT Data API",
    "description": "Code assessment API for NTT Data",
    "license": {
      "name": "Apache 2.0",
      "url": "http://springdoc.org"
    },
    "version": "v0.0.1"
  },
  "externalDocs": {
    "description": "Manik Jain NTT Data API",
    "url": "https://github.com/Manik-Jain/ntt-manik-jain"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/v1/players": {
      "get": {
        "tags": [
          "player-controller"
        ],
        "summary": "Get players information",
        "description": "Return top ranked players sorted by rank ASC or an empty list if none exists. We have a configurable property mentioned in application properties file to limit the records (by default fetches top 100 results)",
        "operationId": "get players details",
        "parameters": [
          {
            "name": "matchType",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful request",
            "content": {
              "*/*": {
                "schema": {
                  "uniqueItems": true,
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Player"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "uniqueItems": true,
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Player"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "uniqueItems": true,
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Player"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "player-controller"
        ],
        "summary": "Update player information",
        "description": "update player records based on how they perform and the rating accumulated. Due to time crunch, this version allows public updates which shall be rectified in v2",
        "operationId": "update players details",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePlayer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "player-controller"
        ],
        "summary": "Create a new Player",
        "description": "Add a new player to ICC database with default rank and rating (which can be updated later based on player performance)",
        "operationId": "add new player",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "Record created succesffuly",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Player"
                }
              }
            }
          }
        }
      }
    },
    "/v1/players/{id}": {
      "delete": {
        "tags": [
          "player-controller"
        ],
        "summary": "Delete player information",
        "description": "Delete player records if the record exists, else throw InvalidPlayerOperation exception",
        "operationId": "Delete players details",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdatePlayer": {
        "required": [
          "country",
          "firstName",
          "id",
          "lastName",
          "matchType"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "matchType": {
            "type": "string"
          },
          "rank": {
            "maximum": 2147483639,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "rating": {
            "maximum": 1000,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "rank": {
            "type": "integer",
            "format": "int32"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "format": "int32"
          },
          "matchType": {
            "type": "string"
          }
        }
      },
      "CreatePlayer": {
        "required": [
          "country",
          "firstName",
          "lastName",
          "matchType"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "matchType": {
            "type": "string"
          }
        }
      }
    }
  }
}